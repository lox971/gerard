<div class="banner text-center">
  <div class="banner-background-shadow"> </div>
    <div class="banner-content">
      <div class="col-sm-6 col-sm-offset-3">
        <h1>Gerard</h1>
        <p class='animword'>Move your sofa</p>
        <br>
        <div class='form-home'>
          <%= simple_form_for @course, url: preview_courses_path, method: 'get' do |f| %>

            <%= f.fields_for :sites do |ff| %>
              <%= ff.input :address, placeholder: "Put a pick up address", label: false %>
              <%= ff.hidden_field :type, value: "pick_up" %>

              <%= f.fields_for :sites do |ff| %>
                <%= ff.input :address, placeholder: "Put a drop off address",label: false %>
                <%= ff.hidden_field :type, value: "drop_off" %>
                <%= ff.hidden_field :from, value: "home" %>
                <br>
                <%= f.button :submit, "Estimation", class: "btn btn-primary" %>
              <% end %>
              <% end %>
          <% end %>
        </div>

        <div class="banner-btn">

          <%= link_to "Sign In", user_session_path, class: "btn btn-warning" %>
          <%= link_to "Sign Up", new_user_registration_path + "?customer", class: "btn btn-warning" %>
          <%= link_to "Become a Gerard", new_user_registration_path + "?mover", class: "btn btn-warning" %>
        </div>
      </div>
    </div>
</div>

