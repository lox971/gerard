
<div class = "text-center card">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">


        <%= form_tag order_payments_path(@order) do %>
            <h2 style="color:black;">Purchase of course <%= @course.sku %></h2>
            <article>
              <label class="amount">
                <span>Amount: <%= humanized_money_with_symbol(@course.price) %></span>
              </label>
            </article>


            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-name="Your Order"
              data-description="Reference nÂ°<%= @course.sku %>"
              data-amount="<%= @course.price_cents %>"
              data-email = "<%= current_user.email %>"
              data-currency="EUR">
            </script>

        <% end %>
      </div>
    </div>
  </div>
</div>
