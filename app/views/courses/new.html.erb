
<div class= "log-wrapper">
  <h2 class="text-center">Que souhaitez-vous déplacer ?</h2>
  <div class="log-container">


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @course do |f| %>
        <%= f.input :picture, label: "Photo du produit"%>
        <%= f.input :description, placeholder: "Dimension, Nombre d'étage...."%>


        <%= f.fields_for :sites do |ff| %>
          <%= ff.input :address, label: "addresse de prise en charge", placeholder: "Lieu de chargement" %>
          <%= ff.hidden_field :type_of, value: "pick_up" %>


          <%= f.fields_for :sites do |ff| %>
            <%= ff.input :address, label:"addresse de livraison", placeholder: "Lieu de livraison" %>
            <%= ff.hidden_field :type_of, value: "drop_off" %>


          <%= f.button :submit, "Poster votre demande", class: "btn btn-primary " %>

          <% end %>

        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>

<!-- Include Google Maps JS API -->
<script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyDp6N1RFk7uGegeJBlNW9pKQmsY0ruzqDw "></script>

<!-- Custom JS code to bind to Autocomplete API -->
<script type="text/javascript" src="autocomplete.js"></script>
<% content_for(:after_js) do %>

  <script>
    $('noEnterSubmit').keypress(function(e) {
      if (e.keyCode == '13'){
         e.preventDefault();
       }
    });​
  </script>

  <%= javascript_tag do %>
    $(document).ready(function() {
      $('input').keypress(function(e) {
        if(e.keyCode == '13') {
          e.preventDefault();
        }
      })
    })
  <% end %>

<% end %>

