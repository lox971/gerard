
<div class= "text-center">
  <h1>Add a course</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @course do |f| %>

        <%= f.fields_for :sites do |ff| %>
          <%= ff.input :address, placeholder: "Put a pick up address" %>
          <%= ff.hidden_field :type, value: "pick_up" %>


          <%= f.fields_for :sites do |ff| %>
            <%= ff.input :address, placeholder: "Put a drop off address" %>
            <%= ff.hidden_field :type, value: "drop_off" %>

          <%= f.button :submit, "Submit", class: "btn btn-primary ", id:"noEnterSubmit" %>

          <% end %>

        <% end %>
      <% end %>
    </div>
  </div>
</div>

<!-- Include Google Maps JS API -->
<script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyDp6N1RFk7uGegeJBlNW9pKQmsY0ruzqDw "></script>

<!-- Custom JS code to bind to Autocomplete API -->
<script type="text/javascript" src="autocomplete.js"></script>
