<div class="container text-center">
  <div class="row">
    <div class="card">
        <% @courses.each do |course| %>
          <div class="col-xs-12 hidden-sm hidden-md hidden-lg">
            <span class="card-shadow"></span>
              <span class="card-description"><%= course.kms %> kilometers</span>
              <br>
              <span class="card-description"><%= course.time %> minutes</span>
                <span class="card-text">
                  <p><%= humanized_money_with_symbol(course.price) %></p>
                  <p><%= link_to 'Refuser', course_path(course), class: 'btn btn-danger' %> <%= link_to 'Accepter', course_path(course), class: 'btn btn-success' %></p>
                </span>
          </div>
        <%end%>
    </div>
  </div>
</div>


