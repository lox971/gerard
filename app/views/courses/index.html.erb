<div class="course-wrapper">
  <!-- <h2 class='course-item-section'>Course en attente</h2> -->
  <div class="course-item-container">
    <div class="course-item">
      <% @courses.each do |course| %>
      <div class="text-center"><%= image_tag course.picture.url (:medium) %></div>
      <div class="course-distance">
        <div class="course-distance-item">
          <i class='mdi mdi-truck'></i>
          <%= course.kms %> kms
        </div>
        <div class="course-distance-item">
          <i class='mdi mdi-clock-fast'></i> <%= course.time %> minutes
        </div>
      </div>
      <div class="course-pickup">
        <i class='mdi mdi-flag-outline'></i> <%= course.sites.select { |site| site.type_of == "pick_up" }.first.address %>
      </div>
      <div class="course-dropoff">
        <i class='mdi mdi-flag-checkered'></i> <%= course.sites.select { |site| site.type_of == "drop_off" }.first.address %>
      </div>
      <div class="course-action">
        <div class="course-price">
          <%= humanized_money_with_symbol(course.price) %>
        </div>
        <div class="course-action-item">
         <!--  <%= link_to 'Get it', new_user_session_path(pending_course_id: course.id), class: "btn btn-primary"%> -->
        </div>
      </div>
      <div class "btn-group">
        <button class="btn btn-default" type="button"><%= link_to 'Refuser', course_path(course), class: 'btn btn-danger btn-accept' %> <%= link_to 'Accepter', course_path(course), class: 'btn btn-success btn-accept' %></button>
      </div>
      <%end%>
    </div>
  </div>
</div>




